{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "binaryDir": "${projectDir}\\build",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": {
                    "type": "BOOL",
                    "value": ""
                },
                "BUILD_EXAMPLES": {
                    "type": "BOOL",
                    "value": "false"
                }
            },
            "configuration": "RelWithDebInfo",
            "description": "Default build using Ninja generator",
            "displayName": "Default Config",
            "generator": "Ninja",
            "installDir": "${projectDir}\\out\\install\\${name}",
            "name": "default"
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        }
    ]
}
